<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userDAO" class="be.fortemaison.easyfit.dao.hibernate.UserHibDao">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="unitDAO" class="be.fortemaison.easyfit.dao.hibernate.UnitHibDao">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="productDAO" class="be.fortemaison.easyfit.dao.hibernate.ProductHibDao">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="recipeDAO" class="be.fortemaison.easyfit.dao.hibernate.RecipeHibDao">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="productRecipeDAO" class="be.fortemaison.easyfit.dao.hibernate.ProductAndRecipeHibDao">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="consumptionDAO" class="be.fortemaison.easyfit.dao.hibernate.ConsumptionHibDao">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="productCategoryDAO" class="be.fortemaison.easyfit.dao.hibernate.ProductCategoryHibDao">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="weightDAO" class="be.fortemaison.easyfit.dao.hibernate.WeightHibDao">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

</beans>