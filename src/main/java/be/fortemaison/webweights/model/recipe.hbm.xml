<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="be.fortemaison.webweights.model">

    <class name="Recipe" table="recipe">

        <id name="id">
            <generator class="native"/>
        </id>

        <property name="name"/>

        <property name="description"/>

        <property name="favorite" type="boolean"/>

        <property name="point" type="double"/>

        <set name="recipeDetails" inverse="true" cascade="all-delete-orphan">
            <key column="recipeid"/>
            <one-to-many class="RecipeDetail"/>
        </set>

    </class>
</hibernate-mapping>