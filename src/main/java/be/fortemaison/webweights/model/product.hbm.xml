<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="be.fortemaison.webweights.model">

    <class name="Product" table="product" batch-size="20">

        <id name="id">
            <generator class="native"/>
        </id>

        <property name="name"/>

        <property name="description"/>

        <property name="amount" type="double"/>

        <property name="point" type="double"/>

        <property name="favorite" type="boolean"/>

        <many-to-one name="unit" column="unitid" class="Unit" lazy="false" not-null="true" cascade="none"/>

    </class>
</hibernate-mapping>